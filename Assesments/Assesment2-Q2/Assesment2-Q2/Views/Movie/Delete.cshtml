@model Assesment2_Q2.Models.Movie
@{
    ViewBag.Title = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <title>Delete Movie</title>
</head>
<body>
    <h2>Delete Movie</h2>

    <h3>Are you sure you want to delete this movie?</h3>
    <div>
        <dl>
            <dt>Movie ID:</dt>
            <dd>@Model.Mid</dd>
            <dt>Movie Name:</dt>
            <dd>@Model.Moviename</dd>
            <dt>Date of Release:</dt>
            <dd>@Model.DateofRelease.ToShortDateString()</dd>
        </dl>
    </div>

    @using (Html.BeginForm("DeleteConfirmed", "Movie", new { id = Model.Mid }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
        </div>
    }
</body>
</html>